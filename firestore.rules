rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own data, admins can read all
      allow read: if isOwner(userId) || isAdmin();
      // Only admins can create/update user data
      allow write: if isAdmin();
    }
    
    // Apps collection
    match /apps/{appId} {
      // Anyone can read apps (public data)
      allow read: if true;
      // Only admins can write
      allow write: if isAdmin();
    }
    
    // Messages collection (contact form submissions)
    match /messages/{messageId} {
      // Anyone can create messages (contact form)
      allow create: if true;
      // Only admins can read and update
      allow read, update: if isAdmin();
      // No one can delete messages
      allow delete: if false;
    }
    
    // Site settings
    match /siteSettings/{settingId} {
      // Anyone can read basic site settings
      allow read: if true;
      // Only admins can write
      allow write: if isAdmin();
    }
    
    // About content
    match /content/{contentId} {
      // Anyone can read published content
      allow read: if true;
      // Only admins can write
      allow write: if isAdmin();
    }
    
    // Activity logs
    match /activityLogs/{logId} {
      // Only admins can read logs
      allow read: if isAdmin();
      // Only admins can create logs
      allow create: if isAdmin();
      // No updates or deletes on logs
      allow update, delete: if false;
    }
    
    // Analytics data
    match /analytics/{analyticsId} {
      // Only admins can read analytics
      allow read: if isAdmin();
      // System can write analytics data
      allow write: if isAdmin();
    }
    
    // Notifications
    match /notifications/{notificationId} {
      // Users can read their own notifications, admins can read all
      allow read: if isOwner(resource.data.userId) || isAdmin();
      // Only admins can write notifications
      allow write: if isAdmin();
    }
    
    // Default rule - deny all access to other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}